generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password_hash String
  role          String    @default("user") // "admin" | "user"
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}
